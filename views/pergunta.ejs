<%-include('../partials/header')%>
<body>
    <%-include ('../partials/navbar')%>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <hr>    
        <p><%= pergunta.descricao %></p>
        <hr>
        <form action="/responder" method="POST">
            <h3>Responda</h3>
            <label>Resposta:</label><br>
            <textarea placeholder="Digite sua Reposta" class="form-control" name="corpo"></textarea>
            <input type="hidden" value="<%= pergunta.id %>" name="pergunta">
            <br>
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>    
        <% respostas.forEach(resposta=>{%>
            <br>
            <div class="card">
                <div class="card-body">
                    <%=resposta.corpo%><br>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%-include ('../partials/footer')%>